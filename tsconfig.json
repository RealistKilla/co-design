{
  "extends": "@tsconfig/node20/tsconfig.json",
  "$schema": "https://json.schemastore.org/tsconfig",
  "_version": "20.19.0",

  "compilerOptions": {
    "lib": ["es2023", "dom"],
    "module": "nodenext",
